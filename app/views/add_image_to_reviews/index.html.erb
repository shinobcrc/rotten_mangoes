<h1>Add Image To Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_image_to_reviews.each do |add_image_to_review| %>
      <tr>
        <td><%= add_image_to_review.name %></td>
        <td><%= add_image_to_review.description %></td>
        <td><%= add_image_to_review.image %></td>
        <td><%= link_to 'Show', add_image_to_review %></td>
        <td><%= link_to 'Edit', edit_add_image_to_review_path(add_image_to_review) %></td>
        <td><%= link_to 'Destroy', add_image_to_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

